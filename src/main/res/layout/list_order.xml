<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
  <TextView
      android:id="@+id/data"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="3dp"
      android:text="日期"
      />
  <TextView
      android:id="@+id/address"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="3dp"
      android:text="地点"
      />
  <TextView
      android:id="@+id/desk_num"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="3dp"
      android:text="桌"
      />
  <TextView
      android:id="@+id/chair_num"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:padding="3dp"
      android:text="椅"
      />
  <TextView
      android:id="@+id/state"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="3dp"
      android:text="状态"
      />
  <TextView
      android:id="@+id/contact"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:padding="3dp"
      android:text="联系人"
      />
  <TextView
      android:id="@+id/client_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:padding="3dp"
      android:text="客户名"
      />
</LinearLayout>